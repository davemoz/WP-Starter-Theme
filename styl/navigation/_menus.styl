.main-navigation
	display block
	width unset
	justify-content center
	+widerThan($tabletLG)
		display flex
		justify-content flex-end
	.mobile-nav-overlay
		content ''
		display block
		position fixed
		background rgba(0,0,0,0.7)
		top 0
		left 0
		width 100%
		height 100%
		opacity 0
		transition opacity 500ms
		z-index -1
	#primary-menu-wrap
		display flex
		flex-direction column
		justify-content space-between
		align-items stretch
		position absolute
		left 0
		top 0
		background-color #fff
		width 0
		overflow hidden
		z-index 99
		transition all .3s ease-in-out
		+widerThan($tabletLG)
			position relative
			width unset
			height auto
			overflow unset
			min-height 1px !important
		#primary-menu
			position relative
			height 100%
			margin 0
			padding 3em 0 0 0
			list-style none
			+widerThan($tabletLG)
				display block
				margin 0
				padding 0
				height auto
			.content-width
				display flex
				flex-direction column
				justify-content unset
				align-items unset
				padding 0
				+widerThan($tabletLG)
					flex-direction row
			ul
				box-shadow 0 3px 3px rgba(0, 0, 0, 0.2)
				float left
				position absolute
				top 1.5em
				left -999em
				z-index 99999
				ul
					left -999em
					top 0
				li
					&:hover > ul
					&.focus > ul
						left 100%
				a
					width 200px
					border-bottom 0
					background-color transparent
					box-shadow none
			#menu-close
				display block
				position absolute
				top 5px
				right 10px
				color #333
				padding 1em
				z-index 999
				cursor pointer
				+widerThan($tabletLG)
					display none
				// uncomment next few lines to style the hover & focus states
				// :hover > a
				// .focus > a
				// a:hover
				// a.focus
			li:hover > ul
			li.focus > ul
				left auto
		li
			position relative
			border-bottom 1px solid #e2e2e2
			transform translate3d(-150px, 0, 0)
			transition transform .15s ease-in-out
			+widerThan($tabletLG)
				border-bottom 0
				transform translate3d(0, 0, 0)
			// uncomment next few lines to style the hover & focus states
			&:hover > a,
			&.focus > a
				background rgba(0,0,0,.3)
			&:last-of-type
				&:hover > a,
				&.focus > a
					background transparent
					opacity .5
		a
			display block
			text-decoration none
			padding 1.5em 1em
			text-align left
			border-bottom 0
			background-color transparent
			box-shadow none
			text-align center
			border-radius 50px
		// uncomment next few lines to style current page links
		// .current_page_item > a
		// .current-menu-item > a
		// .current_page_ancestor > a
		.menu-social-menu-container
			+widerThan($tabletLG)
				display none
			#social-menu
				position relative
				margin 0
				padding 0
				list-style none
				.content-width
					display flex
					li
						display flex
						justify-content center
						width 100%
						transform translate3d(0,0,0)
						border-bottom none
						a
							flex 1 0 auto
							display flex
							justify-content center
							align-items center
							svg
								width 20px
								height 20px
							&:hover
								color #fff
							&[title="instagram"]
								&:hover
									background radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%)
							&[title="twitter"]
								&:hover
									background #00aced
							&[title="pinterest"]
								&:hover
									background #E60023
	// Menu Toggle ------------------------
	#menu-toggle
		display inline-block
		transition all 0.3s ease-out
		cursor pointer
		padding 1em
		+widerThan($tabletLG)
			display none
		.menu-icon
			height 20px
			width 20px
			position relative
			z-index 2
			cursor pointer
			display block
			.menu-icon__line
				height 2px
				width 20px
				display block
				background-color #000
				margin-bottom 5px
				cursor pointer
				transition background-color .5s ease, -webkit-transform .2s ease
				transition transform .2s ease, background-color .5s ease
				transition transform .2s ease, background-color .5s ease, -webkit-transform .2s ease
			.menu-icon__line-left
				width 11px
				-webkit-transition all 200ms linear
				transition all 200ms linear
			.menu-icon__line-right
				width 11px
				float right
				transition all 200ms linear
			&:hover
				.menu-icon__line-left,
				.menu-icon__line-right
					width 20px

.admin-bar
	#primary-menu-wrap
		top 46px
		+widerThan(782px)
			top 32px
		+widerThan($tabletLG)
			top 0

.menu--active
	height 100vh
	overflow hidden
	+widerThan($tabletLG)
		overflow unset
	.main-navigation
		.mobile-nav-overlay
			opacity 1
			transition opacity 500ms
			z-index 9
			+widerThan($tabletLG)
				display none
				position relative
				width 1px
				height 1px
				opacity 0
				z-index -1
		#primary-menu-wrap
			width 60%
			position fixed
			+between($mobileLG, $tabletLG)
				width 40%
			+widerThan($tabletLG)
				top 0
				width unset
			#primary-menu
				.content-width
					+widerThan($tabletLG)
						flex-direction row
					li
						transform translate3d(0, 0, 0)
						transition transform 500ms ease-out
						&:first-child
							transition-delay .1s
						&:nth-child(2)
							transition-delay .2s
						&:nth-child(3)
							transition-delay .3s
						&:nth-child(4)
							transition-delay .4s
						&:nth-child(5)
							transition-delay .5s
						&:nth-child(6)
							transition-delay .6s
						&:nth-child(7)
							transition-delay .7s
						&:nth-child(8)
							transition-delay .8s
						&:nth-child(9)
							transition-delay .9s

/* Cart Nav Item */
.cart-navigation
	display flex
	justify-content flex-end
	+widerThan($tabletLG)
		display none
	ul
		display flex
		justify-content flex-end
		list-style none
		margin 0
		padding 0
		li
			a
				display block
				padding 1em
				color $color__link
				border 0
				border-bottom 0
				background-color transparent
				box-shadow none
				position relative
				&:hover
					color $color__link-hover
					border 0

/* Homepage Menu */
.home
	#menu-toggle
		.menu-icon
			.menu-icon__line
				background-color #fff
	.main-navigation
		#primary-menu-wrap
			background-color #fff
			+widerThan($tabletLG)
				background-color transparent
			a
				color $color__link
				+widerThan($tabletLG)
					color #fff
	.cart-navigation
		ul
			li
				a
					color #fff
					&:hover
						color #fff
						opacity .7

.comment-navigation
.posts-navigation
.post-navigation
	.site-main &
		margin 0 0 1.5em
		overflow hidden
	& .nav-previous
		float left
		width 50%
	& .nav-next
		float right
		text-align right
		width 50%