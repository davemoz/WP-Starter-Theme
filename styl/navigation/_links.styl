a
	color $color__link
	text-decoration none
	background-color transparent
	transition background .15s cubic-bezier(0.33, 0.66, 0.66, 1)
	border-bottom 3px solid $color__accent-second
	box-shadow inset 0 -4px 0 $color__accent-second
	&:visited
		color $color__link-visited
	&:hover
	&:focus
	&:active
		color $color__link
		background-color $color__accent-second
	&:focus
		outline thin dotted
	&:hover
	&:active
		outline 0
	&.btn-link
		border-bottom none
		box-shadow none
		background-color transparent
		&:hover
			background-color transparent
/* Reset admin bar links style */
#wpadminbar
	a
		border-bottom 0
		background-color transparent
		box-shadow none
/* Remove links style */
a.woocommerce-product-gallery__trigger,
.woocommerce-product-gallery__image > a,
#colophon a
		border-bottom 0
		background-color transparent
		box-shadow none